<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cara.calendar.Monthview">

    <TextView
        android:id="@+id/monthName"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="September"/>
    <!--Get month from java
        Maybe some way while getting month to get day month starts on
        And how many days in month-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/monthName"
        android:layout_above="@id/yearButton"
        android:layout_centerHorizontal="true"
        android:columnCount="7"
        android:rowCount="5">

        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:text="1"/>
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:text="2"/>
        <TextView
            android:layout_column="2"
            android:layout_row="0"
            android:text="3"/>
        <TextView
            android:layout_column="3"
            android:layout_row="0"
            android:text="4"/>
        <TextView
            android:layout_column="4"
            android:layout_row="0"
            android:text="5"/>
        <TextView
            android:layout_column="5"
            android:layout_row="0"
            android:text="6"/>
        <TextView
            android:layout_column="6"
            android:layout_row="0"
            android:text="7"/>
        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:text="8"/>
        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:text="9"/>
        <TextView
            android:layout_column="2"
            android:layout_row="1"
            android:text="10"/>
        <TextView
            android:layout_column="3"
            android:layout_row="1"
            android:text="11"/>
        <TextView
            android:layout_column="4"
            android:layout_row="1"
            android:text="12"/>
        <TextView
            android:layout_column="5"
            android:layout_row="1"
            android:text="13"/>
        <TextView
            android:layout_column="6"
            android:layout_row="1"
            android:text="14"/>
        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:text="15"/>
        <TextView
            android:layout_column="1"
            android:layout_row="2"
            android:text="16"/>
        <TextView
            android:layout_column="2"
            android:layout_row="2"
            android:text="17"/>
        <TextView
            android:layout_column="3"
            android:layout_row="2"
            android:text="18"/>
        <TextView
            android:layout_column="4"
            android:layout_row="2"
            android:text="19"/>
        <TextView
            android:layout_column="5"
            android:layout_row="2"
            android:text="20"/>
        <TextView
            android:layout_column="6"
            android:layout_row="2"
            android:text="21"/>
        <TextView
            android:layout_column="0"
            android:layout_row="3"
            android:text="22"/>
        <TextView
            android:layout_column="1"
            android:layout_row="3"
            android:text="23"/>
        <TextView
            android:layout_column="2"
            android:layout_row="3"
            android:text="24"/>
        <TextView
            android:layout_column="3"
            android:layout_row="3"
            android:text="25"/>
        <TextView
            android:layout_column="4"
            android:layout_row="3"
            android:text="26"/>
        <TextView
            android:layout_column="5"
            android:layout_row="3"
            android:text="27"/>
        <TextView
            android:layout_column="6"
            android:layout_row="3"
            android:text="28"/>
        <TextView
            android:layout_column="0"
            android:layout_row="4"
            android:text="29"/>
        <TextView
            android:layout_column="1"
            android:layout_row="4"
            android:text="30"/>
        <TextView
            android:layout_column="2"
            android:layout_row="4"
            android:text="31"/>

    </GridLayout>

    <Button
        android:id="@+id/yearButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year" />

</RelativeLayout>
